<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="@dimen/card_elevation">

    <ImageView
        android:id="@+id/iv_poster"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitStart"
        tools:src="@drawable/poster"
        />
    <!--android:scaleType="fitStart"-->
    <!--android:adjustViewBounds="true"-->
    <!--kedua property di atas dibutuhkan supaya picasso dapat load image -->
    <!--dengan width yang menyesuaikan item-->
    <!--dan height yang proporsional-->

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:background="@color/whiteTransparent70Percent"
        android:gravity="center"
        android:padding="@dimen/text_title_padding"
        tools:text="Nama Movie"/>

</android.support.v7.widget.CardView>